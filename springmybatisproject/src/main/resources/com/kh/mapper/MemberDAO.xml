<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.springmybatisproject.mapper.MemberDAO">
    <!-- 데이터베이스에서 기본키를 인수로 전달한 자바빈의 프로퍼티를 통해 취득한다.  -->
    <!-- <insert id="create" useGeneratedKeys="true" keyProperty="userNo"> -->
    <insert id="insert" parameterType="com.kh.springmybatisproject.domain.Member">
        <selectKey keyProperty="no" resultType="int" order="BEFORE"> select MEMBER_SEQ.NEXTVAL FROM
        DUAL </selectKey>INSERT INTO MEMBER(NO,ID,PW,NAME) VALUES (#{no}, #{id}, #{pw}, #{name})</insert>
    <insert id="insertAuth" parameterType="com.kh.springmybatisproject.domain.MemberAuth"> INSERT
        INTO MEMBER_AUTH(NO,AUTH) VALUES (#{no}, #{auth})</insert>
</mapper>